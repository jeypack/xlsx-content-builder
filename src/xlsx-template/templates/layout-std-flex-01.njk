{% extends "layout-std.njk" %}

{%- block style -%}
  <link rel="stylesheet" href="{{'./css/' + jsCssName + '.css'}}">
{%- endblock -%}

{% block body -%}
  <body class="{{bodyClass}}">
    <div id="celek">
      <div class="main">
        {% block content -%}{%- endblock %}
      </div>
    </div>
    {% block js -%}
      <script src="{{'./js/' + jsCssName + '.js'}}"></script>
    {%- endblock %}
    {% block script -%}
    {# OLD flexSliderCols is useless now !!! #}
      {%- if numSliderCols === 3 -%}
        {%- include "partials/flex-inline-js-3-cols.njk" -%}
      {%- elif numSliderCols === 4 -%}
        {%- include "partials/flex-inline-js-4-cols.njk" -%}
      {%- elif numSliderCols === 5 -%}
        {%- include "partials/flex-inline-js-5-cols.njk" -%}
      {%- elif numSliderCols === 6 -%}
        {%- include "partials/flex-inline-js-6-cols.njk" -%}
      {%- endif -%}
    {%- endblock -%}
  </body>
{%- endblock %}